<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/doorwindow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="15dp">


            <ImageView
                android:id="@+id/back_arrow_door_window"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/left_arrow" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewWindow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="300dp"
                android:layout_weight="1"
                android:textColor="@color/background"
                android:text="@string/window"
                android:textSize="24sp"
                android:textStyle="bold"/>


            <Switch
                android:id="@+id/switchWindow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="300dp"
                android:paddingStart="10dp"
                android:scrollbarSize="34dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDoor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/background"
                android:layout_weight="1"

                android:text="@string/door"
                android:textStyle="bold"
                android:textSize="24sp" />


            <Switch
                android:id="@+id/switchDoor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="0dp"

                android:paddingStart="10dp"
                android:scrollbarSize="34dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>