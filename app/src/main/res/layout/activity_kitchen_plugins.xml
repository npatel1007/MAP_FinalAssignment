<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/kitchen_plugins">
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/left_arrow" />

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="273dp"
        android:layout_margin="20dp"
        android:layout_marginTop="18dp"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-500dp"
            android:layout_marginTop="150dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/timerMicrowave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_timer" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/microwave"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchMicrowaveOn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:scrollbarSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="Fridge "
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchCoffeemakerOn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:scrollbarSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="@string/dishwasher"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchDishwasherOn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:scrollbarSize="30dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>