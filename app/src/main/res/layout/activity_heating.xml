<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE1D3">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/left_arrow" />

        <LinearLayout
            android:layout_width="162dp"
            android:layout_height="213dp"
            android:layout_marginStart="120dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/plugs">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewCurrentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_weight="1.5"
                android:layout_marginStart="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:text="@string/current_temperature" />

            <TextView
                android:id="@+id/textTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:layout_weight="0.5"
                android:layout_marginStart="15dp"
                android:layout_marginTop="18dp"
                android:textColor="@color/background"
                android:textStyle="bold"
                android:text="@string/defaultTemperature" />

            <ImageView
                android:id="@+id/syncTemperature"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/sync" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:text="@string/ac"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switchAC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="68dp"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:textStyle="bold"
                android:textColor="@color/black"

                android:scrollbarSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewHeater"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:text="@string/heater"
                android:textColor="@color/black"

                android:textSize="20sp"
                android:textStyle="bold" />


            <Switch
                android:id="@+id/switchHeater"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="68dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:scrollbarSize="30dp" />
        </LinearLayout>



    </LinearLayout>
</ScrollView>